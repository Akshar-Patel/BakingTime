<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/text_view_ingredient_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_single_margin"
    android:textSize="@dimen/default_title_text_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="TextView"/>
  <TextView
    android:id="@+id/text_view_quantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_single_margin"
    android:textSize="@dimen/default_single_text_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_view_ingredient_name"
    tools:text="TextView"/>
  <TextView
    android:id="@+id/text_view_measure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_single_margin"
    android:textSize="@dimen/default_single_text_size"
    app:layout_constraintStart_toEndOf="@+id/text_view_quantity"
    app:layout_constraintTop_toBottomOf="@+id/text_view_ingredient_name"
    tools:text="TextView"/>
  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="@dimen/default_single_margin"
    android:layout_marginBottom="@dimen/default_single_margin"
    android:background="@android:color/darker_gray"
    app:layout_constraintTop_toBottomOf="@id/text_view_quantity"
    />
</android.support.constraint.ConstraintLayout>